{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "build",
    "typeRoots": [ "./node_modules/@types", "./typings" ]
  },
  "exclude": [
    "node_modules"
  ]
}
