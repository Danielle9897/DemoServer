  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
